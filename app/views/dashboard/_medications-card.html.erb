<div class='card bg-dark text-white'>
  <div class='card-header'>
    Medications
  </div>
  <div class='card-body'>
    <table class='table table-striped table-dark status'>
      <% @medications.each do |medication| %>
        <tr>
          <td><%= sanitize(medication.medication.code.text)%></td>
          <td><%= sanitize(medication.status) %></td>

          <td>
          <% medication.dosage.each do |instruction| %>
            <%= sanitize(instruction.text) %>
            <% end %> 
          </td>
          <td><%= link_to display_human_name(medication.requester.name[0]), practitioner_path(medication.requester.id) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
