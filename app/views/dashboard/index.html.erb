<section class='container'>
  <section class='row'>
    <% if @patient.present? %>
      <div class='col-6 card-container'>
        <%= render 'patient-card' %>
      </div>
      <div class='col-6 card-container'>
        <%= render 'medications-card' %>
      </div>
      <div class='col-6 card-container'>
        <%= render 'functional-status-card' %>
      </div>
      <div class='col-6 card-container'>
        <%= render 'cognitive-status-card' %>
      </div>
    <% else %>
      Not available
    <% end %>
  </section>
</section>

