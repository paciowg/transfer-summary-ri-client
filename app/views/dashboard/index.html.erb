<section class='container'>
  <section class='row'>
    <% unless @patient.nil? %>
      <div class='col-3 card-container'>
        <div class='card bg-dark text-white'>
          <div class='card-header'>
            <%= @patient.full %>
          </div>
          <div class='card-body'>
            <%= display_photo(@patient.photo, @patient.gender, 
                        class: 'profile-photo') %>
          </div>
        </div>
      </div>
      <div class='col-3 card-container'>
        <div class='card bg-dark text-white'>
          <div class='card-header'>
            Patient Information
          </div>
          <div class='card-body'>
            <p>
              Gender: <span><%= @patient.gender.capitalize -%></span><br/>
              Age: <span><%= @patient.age -%> years old</span><br/>
              DOB: <span><%= @patient.birthday_text -%></span><br/>
            </p>
            <a href="#" class="btn btn-primary">Details</a>
          </div>
        </div>
      </div>
      <div class='col-3 card-container'>
        <div class='card bg-dark text-white'>
          <div class='card-header'>
            Functional Status
          </div>
          <div class='card-body'>
            <table class='table table-striped table-dark status'>
              <% i = 0 %>
              <% @functional_status.each do |functional_status| %>
                <tr>
                  <td><%= link_to functional_status[:context], functional_status_path(id: i) %></td>
                  <td><%= display_date(functional_status[:datetime]) %></td>
                </tr>
                <% i += 1 %>
              <% end %>
            </table>
          </div>
        </div>
      </div>
      <div class='col-3 card-container'>
        <div class='card bg-dark text-white'>
          <div class='card-header'>
            Cognitive Status
          </div>
          <div class='card-body'>
            <table class='table table-striped table-dark status'>
              <% i = 0 %>
              <% @cognitive_status.each do |cognitive_status| %>
                <tr>
                  <td><%= link_to cognitive_status[:context], cognitive_status_path(id: i) %></td>
                  <td><%= display_date(cognitive_status[:datetime]) %></td>
                </tr>
                <% i += 1 %>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    <% else %>
      Not available
    <% end %>
  </section>
</section>

