<div class='card bg-dark text-white'>
  <div class='card-header'>
    Patient Information
  </div>
  <div class='card-body'>
    <table class='table table-striped table-dark status'>
      <tr>
        <td>Gender</td>
        <td><%= @patient.gender %></td>
      </tr>
      <tr>
        <td>Age</td>
        <td><%= @patient.age %> years old</td>
      </tr>
      <tr>
        <td>DOB</td>
        <td><%= @patient.birth_date %></td>
      </tr>
      <tr>
        <td>Marital Status</td>
        <td><%= @patient.marital_status.text %></td>
      </tr>
      <tr>
        <td>Phone</td>
        <td>
          <% @patient.telecoms.each do |telecom| %>
            <%= display_telecom(telecom) %><br />
          <% end %>
        </td>
      </tr>
      <tr>
        <td>Address</td>
        <td>
          <% @patient.addresses.each do |address| %>
            <%= render partial: 'partials/address', locals: { address: address } %>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
</div>
