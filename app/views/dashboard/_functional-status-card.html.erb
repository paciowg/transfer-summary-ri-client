<div class='card bg-dark text-white'>
  <div class='card-header'>
    Functional Status
  </div>
  <div class='card-body'>
    <table class='table table-striped table-dark status'>
      <% i = 0 %>
      <% @functional_status.each do |functional_status| %>
        <tr>
          <td><%= display_date(functional_status[:datetime]) %></td>
          <td><%= link_to functional_status[:context], functional_status_path(id: i) %></td>
          <td>assessor</td>
        </tr>
        <% i += 1 %>
      <% end %>
    </table>
  </div>
</div>
