<div class='card bg-dark text-white'>
  <div class='card-header'>
    <%= link_to 'Functional Status', functional_status_index_path(patient: @patient.id) %>
  </div>
  <div class='card-body'>
    <table class='table table-striped table-dark status'>
      <% @functional_statuses.each do |functional_status| %>
        <tr>
          <td><%= display_date(functional_status.effective) %></td>
          <td><%= link_to display_categories(functional_status.category), 
                        functional_status_path(id: functional_status.id) %></td>
          <td><%= display_performers(functional_status.performer) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
