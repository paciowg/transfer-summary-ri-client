<div class='card bg-dark text-white'>
  <div class='card-header'>
    Activities
  </div>
  <div class='card-body'>
    <table class='table table-striped table-dark status'>
      <% @care_plan.activities.each do |activity| %>
        <tr>
          <% if activity.detail.present? %>
            <td><%= sanitize(activity.detail.description)%></td>
          <% else %>
            <td><%= display_reference(activity) %>
        <% end %>
        </tr>
      <% end %>
    </table>
  </div>
</div>
