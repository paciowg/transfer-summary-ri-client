<div class='card bg-dark text-white'>
  <div class='card-header'>
    <%= sanitize(@care_plan.title) %>
  </div>
  <div class='card-body'>
    <div class='row patient-info'>
      <div class='col-6'>
        <table class='table table-striped table-dark status'>
          <tr>
            <td>Patient</td>
            <td><%= 
			
			# @patient.name.given does not work despite it being a  "HumanName" type.
			
			link_to @patient.name.first.given.join(" "), dashboard_path(patient: get_id(@patient.id)) %></td>
          </tr>
          <tr>
            <td>id</td>
			<td> <input name="patient_id" type="text" readonly value="<%= sanitize(@patient.id) %>"></input> </td>
          </tr>
          <tr>
            <td>Description</td>
            <td> <textarea name="description" rows=5 cols=40><%= sanitize(@care_plan.description) %></textarea> </td>
          </tr>
          <tr>
            <td>Time Period</td>
            <td><%= display_raw_date(@care_plan.try(:period).try(:start)) %> - <%= display_raw_date(@care_plan.try(:period).try(:end))%></td>
          </tr>
          <tr>
            <td>Status</td>
            <td>
			<%= select_tag(:status, options_for_select([
					['draft'],
					['active'],
 					['on-hold'],
					['revoked'],
					['completed'],
					['entered-in-error'],
					['unknown',]], @care_plan.status)) %>			
			</td>
          </tr>
          <tr>
            <td>Goals</td>
            <td><%= @care_plan.goal %><br/>
			
			<%= link_to "Add a Goal", care_plan_goal_path(@care_plan.id) unless @care_plan.id.nil? %><br/>
			</td>
          </tr>
          <tr>
            <td>Intent</td>
            <td><%= sanitize(@care_plan.try(:intent))%></td>
          </tr>
          <tr>
            <td>Categories</td>
            <td><%= @care_plan.category %></td>
          </tr>
          <tr>
            <td>Subject</td>
            <td><%= @care_plan.subject %></td>
          </tr>
          <tr>
            <td>Author</td>
            <td><%= @care_plan.author %></td>
          </tr>
          <tr>
            <td>Conditions</td>
            <td><%= @care_plan.conditions %></td>
          </tr>
          <tr>
            <td>Activities</td>
            <td><%= @care_plan.activity %></td>
          </tr>
          <tr>
            <td>Contributors</td>
            <td><%= @care_plan.contributor %></td>
          </tr>
        </table>
      </div>
    </div>
		<%#  incomplete CODE!!! %>
		<% submit_tag "Save" %>
  </div>
</div>
