<div class='card bg-dark text-white'>
  <div class='card-header'>
    Goals
  </div>
  <div class='card-body'>
    <table class='table table-striped table-dark status'>
      <% @care_plan.goals.each do |goal| %>
        <tr>
            <td><%= sanitize(goal.description.text)%></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
