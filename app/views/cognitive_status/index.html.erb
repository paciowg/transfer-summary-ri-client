<section class='container'>
  <section class='row'>
    <table class='table table-striped table-dark compare'>
      <th>Assessment</th>
      <% @cognitive_statuses.each do |cognitive_status| %>
        <th><%= display_date(cognitive_status[:bundle].effective) %></th>
      <% end %>
      <% assessment_count = @cognitive_statuses.first[:assessments].count %>
      <% i = 0 %>
      <% while i < assessment_count %>
        <tr>
          <td><%= @cognitive_statuses.first[:assessments][i].code.text %></td>
          <% @cognitive_statuses.each do |cognitive_status| %>
            <td>
              <%= cognitive_status[:assessments][i].value.text %>
            </td>
          <% end %>
        </tr>
        <% i += 1 %>
      <% end %>
    </table>
  </section>
</section>